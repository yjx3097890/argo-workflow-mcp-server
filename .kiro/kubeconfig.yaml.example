apiVersion: v1
kind: Config
clusters:
- cluster:
    # Argo Workflow API 服务器地址
    server: https://YOUR_ARGO_WORKFLOW_HOST:PORT
    # 生产环境应该使用有效的证书，而不是跳过验证
    insecure-skip-tls-verify: true
    # 或者使用证书验证：
    # certificate-authority-data: BASE64_ENCODED_CA_CERT
  name: argo-workflow-cluster
contexts:
- context:
    cluster: argo-workflow-cluster
    user: argo-workflow-user
    # 默认命名空间
    namespace: default
  name: argo-workflow-context
current-context: argo-workflow-context
users:
- name: argo-workflow-user
  user:
    # 如果需要认证，添加 token
    token: "YOUR_TOKEN_HERE"
    # 或者使用客户端证书：
    # client-certificate-data: BASE64_ENCODED_CLIENT_CERT
    # client-key-data: BASE64_ENCODED_CLIENT_KEY
